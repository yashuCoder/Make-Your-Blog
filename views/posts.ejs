<!DOCTYPE html>
<html lang='en'>
    <head>
        <title>Posts</title>
        <link rel="stylesheet" href="/css/styles.css">
        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <head>
    <body>
        <div id="home-section">

            <% const profileUrl = "https://source.unsplash.com/random/300x450/?"+theme; %>
            <img class="image" src=<%=profileUrl%> alt="theme">

            <h1 class="heading"><%=user%></h1>
            <h2 class="Theme"><%=theme%></h2>
            <p class="homepara"><%=about%></p>
            <div class="nav-button1">
                <a id="anchor" href= <%=composePath%> >
                    <div class="button">
                            <div class="icon"><ion-icon name="add"></ion-icon></div>
                            <span>Compose</span>
                    </div>
                </a>
            </div>
            
            <div class="nav-button2">
                <a id="anchor" href=<%=homePath%>>
                    <div class="button">
                            <div class="icon"><ion-icon name="home"></ion-icon></div>
                            <span>Home</span>
                    </div>
                </a>
            </div>
            
            
        </div>
        <br> 
        <div class="blog-container">
            <%if(docs.length === 0){%>
                <div class="animation">
                <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
                <lottie-player src="https://assets9.lottiefiles.com/private_files/lf30_e3pteeho.json"  background="transparent"  speed="1"  style="width: 400px; height: 400px;"  loop  autoplay></lottie-player>
                <h1 class="my-5 display-4 fw-bold ls-tight bottom-heading">
                    No Blogs 
                    <span class="text-Danger">Found</span>
                  </h1>
                </div>
            <%}  %>
            
            <% docs.forEach(function(blog){ %>
                <% const url = "https://source.unsplash.com/random/900x400/?"+blog.theme.replace("/\s/g","_"); %>
                <div class="blog">    
                    <div class="delete-button">
                        <div class="button">
                            <a id="anchor" href="/<%=blog.name%>/posts/delete/<%=blog.theme%>">
                                <div class="icon"><ion-icon name="trash"></ion-icon></div>
                                <span>Delete</span>
                            </a>
                        </div>
                    </div>
                    <a id="anchor" href="/<%=blog.name%>/posts/<%=blog.theme%>">
                    <img src=<%=url%> alt="blog">
                    </a>
                    <div class="blog-detail">
                        <div>
                            
                            <h2><%=blog.theme%></h2>
                            <p><%=blog.blogContent%></p>
                            
                        </div>
                    </div>
                </div>
                
            <% }); %>
            
            
        </div>
        <br>
        
        
        <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
        <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>   
    </body>
</html>

